<h2>Movies</h2>

<ul>
    <% @movies.each do |movie| %>
        <li>
            <strong><%= movie.title %></strong> (<%= movie.rating %>): <%= total_gross(movie)  %>
            <p>
                <%= truncate(movie.description, length: 40, separator: ' ', omission: '...') %>
            </p>
            <p>
                <%= year_of(movie) %>
            </p>
        </li>
    <% end %>
</ul>
